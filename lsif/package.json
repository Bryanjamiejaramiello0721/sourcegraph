{
  "name": "lsif-server",
  "description": "LSIF Server with an HTTP API",
  "author": "Sourcegraph",
  "license": "MIT",
  "version": "0.1.0",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dgraph-js": "^1.3.1",
    "express-async-handler": "^1.1.4",
    "express": "^4.17.1",
    "lsif-protocol": "0.4.3",
    "mz": "^2.7.0",
    "relateurl": "^0.2.7",
    "tmp-promise": "^2.0.2",
    "vscode-languageserver": "^5.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/express": "4.17.0",
    "@types/mz": "0.0.32",
    "@types/relateurl": "^0.2.28",
    "parcel-bundler": "^1.12.3",
    "tsc-watch": "^2.2.1",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "typecheck": "tsc -p .",
    "serve": "tsc-watch --noEmit --onSuccess \"bash -c 'yarn run build && node out/server.bundle.js'\" --noClear",
    "build": "parcel build --out-dir out --out-file server.bundle.js --target node --bundle-node-modules src/server.ts",
    "tslint": "../node_modules/.bin/tslint -p tsconfig.json",
    "eslint": "../node_modules/.bin/eslint 'src/**/*.ts?(x)'"
  }
}
